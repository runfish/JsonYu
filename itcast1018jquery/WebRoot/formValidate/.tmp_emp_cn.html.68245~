	$().ready(function(){
		/*
		 * 自定义验证方法
		 * function(value, element, param)
		 *   *  value是指当前校验域的值
	     *   *  element是指当前检验的域
	     *   *  param是指在rules中设定的参数默认值
	     *   *  这三个参数会在进行校验时由系统自动带入
	     *   
	     *   addMethod("desValidate",function(value, element, param)
	     *    * 添加的验证方法的名字
	     *    * 是一个函数,这个比较重要,决定了用这个验证方法时的写法
		 */
		$.validator.addMethod("cartValidate",function(value, element, param){
			// alert(value +" xxxxx  "+element+"    "+param);
		      var len=value.length;
	      
		      if(len!=15&&len!=18){
		  	     alert("");
			     document.getElementById("cart").focus();
			     return false;
		      }
			  
//			  if (len == 15) {
//			     //验证身份证是15位
