//					  document.getElementById("cart").focus();
//				       return false;
//				  }	
//		       }
			  
			  return true;
			  
//			  //验证身份证是18为
//	          if (len == 18) {
//			     //验证身份证是15位
//				  var pattern=/^\d{18}|\d{17}[X]{1}$/;
//				  if(!pattern.test(cartValue)){
//					   document.getElementById("cart").focus();
//				       return false;
//				  }	
//		       }
			});
/*************************************************************************************************/	
