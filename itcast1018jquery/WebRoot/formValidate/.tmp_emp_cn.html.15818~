<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>jQuery validation plug-in - main demo</title>
		<link rel="stylesheet" type="text/css" media="screen" href="css/screen.css" />
        <script type="text/javascript" src="jquery-1.4.2.js"></script>
        <script type="text/javascript" src="jquery.validate.js"></script>
        
<script type="text/javascript">
	$.validator.setDefaults({
	submitHandler:function(form) {
		    $(form).ajaxSubmit();
     }
 });
	
	$().ready(function(){
	
		/*
		 * 自定义验证方法
		 * function(value, element, param)
		 *   *  value是指当前校验域的值
	     *   *  element是指当前检验的域
	     *   *  param是指在rules中设定的参数
	     *   *这三个参数会在进行校验时由系统自动带入
	     *   addMethod("desValidate",function(value, element, param)
	     *    * 添加的验证方法的名子
	     *    * 是一个函数,这个比较重要,决定了用这个验证方法时的写法
		 */
		$.validator.addMethod("desValidate",function(value, element, param){
			if(value==""){
				return false;
			}
			return true;
			
		});
		
		
		
	
		$("#empForm").validate({
		    //自定义验证规则,通过name属性设置值
			rules: {
				//真实姓名的验证规则
				realname:"required",
				//登录的用户名
				username:{
					required:true,
					minlength:5,
					maxlength:8
				},
				psw:{
					required:true,
					minlength:5,
					maxlength:8
				},
				psw2:{
					required:true,
					equalTo:"#psw"
				},
				//性别
				gender:"required",
				//年龄
				age:{
					required:true,
					number:true,
					digits:true,
					range:[26,50]
				},
				edu:"required",
				birthday:{
					required:true,
					date:true
					
				},
				checkbox1:{
					required:true
				},
				email:{
					required:true,
					email:true
				},
				des:{
					required:true,
					desValidate:"1"
				}
			},
			//自定义提示信息
			messages: {
				realname:"请输入真实姓名",
				username:{
					    required:"您的登录名不能为空",
						minlength:"您最少长度不能少于5个字符",
						maxlength:"您的最大长度不能超多8个字符"
					},
				age:"年龄字段不能为空,应该在20-56之间",
				edu:"你是不是忘记选择学历了",
				birthday:"日期必须在\"1900-01-01\"和\"2000-01-01\"之间",
				checkbox1:"您的兴趣爱好,至少选择一个",
				email:"您的电子邮箱的格式不正确",
				
				des:"不能为空",
				
				psw:"密码不能为空,密码应该在5-8位之间",
				psw2:"两次输入的密码不一致"
			}
		 });
	});
</script>

</head>
<body>
    <p>员工信息录入</p>
